{
  "name": "@hexagon6/sapper-cellular-automata",
  "description": "Cellular Automata built with svelte app maker",
  "version": "0.0.1",
  "scripts": {
    "dev": "sapper dev",
    "build": "sapper build",
    "export": "sapper export",
    "start": "sapper start",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "lint": "prettier **/*.js **/*.json",
    "lint:fix": "prettier --write **/*.js **/*.json",
    "unit": "ava",
    "unit:watch": "ava --watch",
    "test:dev": "run-p --race dev unit",
    "test": "run-s build unit"
  },
  "dependencies": {
    "compression": "^1.7.1",
    "npm-run-all": "^4.1.2",
    "polka": "^0.3.4",
    "sapper": "^0.10.0",
    "serve-static": "^1.13.1",
    "svelte": "^1.57.3",
    "svelte-loader": "^2.3.3",
    "webpack": "^4.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.44",
    "@babel/preset-env": "^7.0.0-beta.44",
    "@babel/register": "^7.0.0-beta.44",
    "@std/esm": "^0.26.0",
    "ava": "1.0.0-beta.3",
    "prettier": "1.11.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "ava": {
    "files": ["tests/*.js", "modules/{**/,}.js"],
    "sources": ["modules/**"],
    "require": ["@std/esm", "@babel/register"],
    "babel": {
      "testOptions": {
        "babelrc": false,
        "plugins": [],
        "presets": ["@babel/preset-env"]
      }
    }
  },
  "@std/esm": "js"
}
